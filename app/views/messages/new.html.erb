<%= turbo_frame_tag "new_message" do %>
  <%= form_with(url: messages_path, class: "form", data: { controller: "form", action: "turbo:submit-start->form#reset" }) do |form| %>
    <%= form.label :message, class: "label" do %>
      Send a message
      <%= form.text_area :message, autofocus: true, data: { form_target: "message" }, class: "textarea" %>
    <% end %>

    <%= form.hidden_field :session_id, value: @session_id %>

    <%= image_submit_tag "send.svg", class: "button", alt: "Send message" %>
  <% end %>
<% end %>

